<div class="flex items-center mt-16">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
    <div class="flex flex-col items-center mb-6">
      <%= image_tag 'mia.png', alt: 'Mia Logo', class: 'h-16 w-16 rounded-full shadow mb-3' %>
      <h2 class="text-2xl font-semibold text-slate-800">Forgot your password?</h2>
      <p class="text-slate-500 text-sm mt-1">
        Enter your email address below
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-slate-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-medium py-2.5 px-6 rounded-lg transition-transform hover:scale-[1.02] cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center mt-4 text-sm text-slate-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
