<div class="flex items-center mt-16">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
    <div class="flex flex-col items-center mb-6">
      <%= image_tag 'mia.png', alt: 'Mia Logo', class: 'h-16 w-16 rounded-full shadow mb-3' %>
      <h2 class="text-2xl font-semibold text-slate-800">Welcome back</h2>
      <p class="text-slate-500 text-sm mt-1">Log in to continue your conversation with Mia</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-slate-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full border border-slate-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 rounded border-slate-300 text-sky-500 focus:ring-sky-400" %>
          <%= f.label :remember_me, class: "text-sm text-slate-600" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-medium py-2.5 rounded-lg transition-transform hover:scale-[1.02] cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center mt-4 text-sm text-slate-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
