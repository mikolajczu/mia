<section class="flex flex-col md:flex-row items-center justify-between max-w-6xl mt-32 px-6">
  <div class="md:w-1/2 space-y-6" data-controller="animation" data-animation-type-value="fade" data-animation-fade-in-delay-value="200">
    <h2 class="text-5xl font-bold text-slate-800 leading-tight">
      <%= t('.title_1') %> <span class="text-sky-500"><%= t('.mia') %></span><%= t('.title_2') %>
    </h2>
    <p class="text-slate-500 text-lg">
      <%= t('.p_1') %>
    </p>
    <%= link_to new_chat_path, class: "bg-sky-500 hover:bg-sky-600 text-white px-6 py-4 rounded-xl font-medium shadow-sm transition active:scale-95" do %>
      <%= t('.start_chatting') %>
    <% end %>
  </div>

  <div class="md:w-1/2 mt-10 md:mt-0 flex justify-center" data-controller="animation" data-animation-type-value="fade" data-animation-fade-in-delay-value="600">
    <%= image_tag "mia.png", alt: "Mia illustration", class: "max-h-80 drop-shadow-xl" %>
  </div>
</section>

