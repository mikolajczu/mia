<aside class="w-64 h-[80vh] bg-slate-100 border-r border-slate-200 p-4 flex flex-col">
  <h3 class="text-slate-700 font-semibold mb-3"><%= t('.title') %></h3>
  <ul class="space-y-2 overflow-y-auto mb-4">
    <% @chats.each do |chat| %>
      <li class="flex justify-between items-center p-2 rounded-lg hover:bg-slate-200 transition">
        <%= link_to chat_path(chat) do %>
          <%= t('.chat_from') %> <%= chat.created_at.strftime("%b %d, %H:%M") %>
        <% end %>
        <%= link_to chat_path(chat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700 ml-2" do %>
          <%= inline_svg_tag 'trash_can.svg', class: "w-5 h-5" %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to t('.new_chat'), new_chat_path, class: "mt-auto bg-sky-500 hover:bg-sky-600 text-white text-center py-2 rounded-lg font-medium transition" %>
</aside>
