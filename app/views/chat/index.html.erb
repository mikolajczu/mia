<div id="chat" data-controller="chat" class="flex flex-col min-w-[50vw] max-w-3xl mx-auto h-[80vh] bg-white rounded-2xl shadow-lg overflow-hidden">
  <div data-chat-target="messages" class="flex-1 overflow-y-auto p-6 space-y-4 bg-slate-50"></div>

  <form data-action="submit->chat#sendMessage" class="border-t border-slate-200 bg-white p-4 flex items-center gap-3">
    <input type="text" data-chat-target="input" class="flex-grow border border-slate-300 focus:border-sky-500 focus:ring-sky-500 rounded-xl px-4 py-2 outline-none transition" placeholder="Write your message..."/>

    <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-5 py-2 rounded-xl font-medium shadow-sm transition active:scale-95 cursor-pointer">
      Send
    </button>
  </form>
</div>
